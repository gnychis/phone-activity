<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_id">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10pt"
        android:text="Please select your home network:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	<Spinner
	    android:id="@+id/network_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10pt"
	    android:text="(Optional) My age range is ..."
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<Spinner
	    android:id="@+id/age_group"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<TextView
	    android:id="@+id/textView3"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10pt"
	    android:text="(Optional) My phone has been in the ..."
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<TableLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <TableRow
	        android:id="@+id/tableRow1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <CheckBox
	            android:id="@+id/kitchen"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:text="Kitchen" />

	        <CheckBox
	            android:id="@+id/bedroom"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:text="Bedroom" />

	    </TableRow>

	    <TableRow
	        android:id="@+id/tableRow2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" >

	        <CheckBox
	            android:id="@+id/livingRoom"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:text="Living room" />

	        <CheckBox
	            android:id="@+id/bathroom"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dp"
	            android:text="Bathroom" />

	    </TableRow>

	</TableLayout>

	<CheckBox
	    android:id="@+id/everywhere"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="20dp"
	    android:text="Everywhere..." />

	<Button
	    android:id="@+id/continue_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_marginTop="10dp"
	    android:onClick="clickedFinished"
	    android:text="That&apos;s all! Back to the home screen ..." />

	<TextView
	    android:id="@+id/textView4"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="10dp"
	    android:text="NOTE:  Your home network needs to be correct for this to work, but it is never shared with us."
	    android:textAppearance="?android:attr/textAppearanceSmall" />

</LinearLayout>
