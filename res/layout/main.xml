<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_id">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:text="Please select your home network:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

	<Spinner
	    android:id="@+id/network_list"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<TextView
	    android:id="@+id/textView2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10pt"
	    android:text="Please select your age range:"
	    android:textAppearance="?android:attr/textAppearanceMedium" />

	<Spinner
	    android:id="@+id/age_group"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" />

	<Button
	    android:id="@+id/continue_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_marginTop="40sp"
	    android:text="I&apos;ve selected my age and network!" />

</LinearLayout>
